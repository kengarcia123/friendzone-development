<div class="user-login-container">
  <div class="form-group">
    <h2 class="text-center">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, :class => "form-control", :placeholder => "User email",  autofocus: true %>
        </div>
        <br/>
        <div class="field">
          <%= f.password_field :password,  :class => "form-control", :placeholder => "User email",  autocomplete: "off" %>
        </div>
        <br/>
        <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
        <% end -%>
        <br/>
        <div class="actions">
          <%= f.submit "Log in" , :class => "btn btn-success"  %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>